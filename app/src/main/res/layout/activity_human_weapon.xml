<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="amardhebardevelopments.halo5soundboard.HumanWeaponsActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/haloBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/image"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/battlerifle"
        android:layout_width="375dp"
        android:layout_height="150dp"
        android:layout_marginTop="26dp"
        app:srcCompat="@mipmap/battlerifle"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="183dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/assaultrifle"
        android:layout_width="375dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/battlerifle"
        android:layout_alignStart="@+id/battlerifle"
        android:layout_below="@+id/battlerifle"
        app:srcCompat="@mipmap/assaultrifle"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="26dp" />

    <ImageButton
        android:id="@+id/dmr"
        android:layout_width="375dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/assaultrifle"
        android:layout_alignStart="@+id/assaultrifle"
        android:layout_below="@+id/assaultrifle"
        app:srcCompat="@mipmap/dmr"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="346dp" />


    <Button
        android:id="@+id/page1left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@+id/dmr"
        android:layout_below="@+id/dmr"
        android:layout_marginRight="200dp"
        android:layout_marginBottom="60dp"
        android:text="Back" />


    <Button
        android:id="@+id/page1right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/dmr"
        android:layout_alignStart="@+id/dmr"
        android:layout_below="@+id/dmr"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="60dp"
        android:text="Next" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewHumanWep1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize = "BANNER"
        ads:adUnitId="ca-app-pub-7075581824590120/3453351098"
        />

</RelativeLayout>
