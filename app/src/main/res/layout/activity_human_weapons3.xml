<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amardhebardevelopments.halo5soundboard.HumanWeaponsActivity3">




    <ImageView
        android:id="@+id/haloBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/image"
        android:scaleType="fitXY"/>



    <ImageButton
        android:id="@+id/haloonepistol"
        android:layout_width="375dp"
        android:layout_height="150dp"
        android:layout_marginTop="26dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/haloonepistol" />

    <ImageButton
        android:id="@+id/railgun"
        android:layout_width="375dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/railgun"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="26dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/haloonepistol" />
    <ImageButton
        android:id="@+id/shotgun"
        android:layout_width="375dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/shotgun"
        android:layout_below="@+id/railgun"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/page3right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="60dp"
        android:text="Next"
        android:layout_below="@+id/shotgun"
        android:layout_alignLeft="@+id/shotgun"
        android:layout_alignStart="@+id/shotgun" />

    <Button
        android:id="@+id/page3left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Back"
        android:layout_marginRight="200dp"
        android:layout_marginBottom="60dp"
        android:layout_below="@+id/shotgun"
        android:layout_alignRight="@+id/shotgun" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewHumanWep3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize = "BANNER"
        ads:adUnitId="ca-app-pub-7075581824590120/6140962294"
        />


</RelativeLayout>
