<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amardhebardevelopments.halo5soundboard.HumanWeaponsActivity3">

    <ImageButton
        android:id="@+id/haloonepistol"
        android:layout_width="381dp"
        android:layout_height="171dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/haloonepistol" />

    <ImageButton
        android:id="@+id/railgun"
        android:layout_width="387dp"
        android:layout_height="187dp"
        app:srcCompat="@mipmap/railgun"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="174dp" />

    <ImageButton
        android:id="@+id/shotgun"
        android:layout_width="379dp"
        android:layout_height="133dp"
        app:srcCompat="@mipmap/shotgun"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.6" />
</android.support.constraint.ConstraintLayout>
