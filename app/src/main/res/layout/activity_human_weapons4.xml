<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amardhebardevelopments.halo5soundboard.HumanWeaponsActivity4">

    <ImageButton
        android:id="@+id/saw"
        android:layout_width="375dp"
        android:layout_height="150dp"
        android:layout_marginTop="26dp"
        app:srcCompat="@mipmap/saw"
        android:layout_centerHorizontal="true"
        />
    <ImageButton
        android:id="@+id/rocketlauncher"
        android:layout_width="375dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/rocketlauncher"
        tools:layout_editor_absoluteY="157dp"
        android:layout_below="@+id/saw"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/sniperrifle"
        android:layout_width="375dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/sniperrifle"
        android:layout_below="@+id/rocketlauncher"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="324dp" />

    <Button
        android:id="@+id/page4right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="60dp"
        android:text="Next"
        android:layout_alignLeft="@+id/sniperrifle"
        android:layout_below="@+id/sniperrifle"
        />

    <Button
        android:id="@+id/page4left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@+id/sniperrifle"
        android:layout_below="@+id/sniperrifle"
        android:layout_marginRight="200dp"
        android:layout_marginBottom="60dp"
        android:text="Back" />

</RelativeLayout>
