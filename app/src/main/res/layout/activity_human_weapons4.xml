<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amardhebardevelopments.halo5soundboard.HumanWeaponsActivity4">



    <ImageView
        android:id="@+id/haloBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/image"
        android:scaleType="fitXY"/>



    <ImageButton
        android:id="@+id/saw"
        android:layout_width="375dp"
        android:layout_height="150dp"
        android:layout_marginTop="26dp"
        app:srcCompat="@mipmap/saw"
        android:layout_centerHorizontal="true"
        />
    <ImageButton
        android:id="@+id/rocketlauncher"
        android:layout_width="375dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/rocketlauncher"
        tools:layout_editor_absoluteY="157dp"
        android:layout_below="@+id/saw"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/sniperrifle"
        android:layout_width="375dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/sniperrifle"
        android:layout_below="@+id/rocketlauncher"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="324dp" />

    <Button
        android:id="@+id/page4right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/sniperrifle"
        android:layout_below="@+id/sniperrifle"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="200dp"
        android:background="@color/UNSC"
        android:text="Next" />

    <Button
        android:id="@+id/page4left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@+id/sniperrifle"
        android:layout_below="@+id/sniperrifle"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="200dp"
        android:background="@color/UNSC"
        android:text="Back" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewHumanWep4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize = "BANNER"
        ads:adUnitId="ca-app-pub-7075581824590120/7617695498"
        />

</RelativeLayout>
