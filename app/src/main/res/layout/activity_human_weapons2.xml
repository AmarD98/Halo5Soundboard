<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amardhebardevelopments.halo5soundboard.HumanWeaponsActivity2">




    <ImageView
        android:id="@+id/haloBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/image"
        android:scaleType="fitXY"/>



    <ImageButton
        android:id="@+id/halo2battlerifle"
        android:layout_width="375dp"
        android:layout_height="150dp"
        android:layout_marginTop="26dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="183dp"
        app:srcCompat="@mipmap/halo2battlerifle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/magnum"
        android:layout_width="375dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/magnum"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="346dp"
        android:layout_below="@+id/halo2battlerifle"
        android:layout_alignLeft="@+id/halo2battlerifle"
        android:layout_alignStart="@+id/halo2battlerifle" />

    <ImageButton
        android:id="@+id/smg"
        android:layout_width="375dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/smg"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="346dp"
        android:layout_below="@+id/magnum"
        android:layout_alignLeft="@+id/magnum"
        android:layout_alignStart="@+id/magnum" />

    <Button
        android:id="@+id/page2right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/smg"
        android:layout_alignStart="@+id/smg"
        android:layout_below="@+id/smg"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="200dp"
        android:background="@color/UNSC"
        android:text="Next" />

    <Button
        android:id="@+id/page2left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@+id/smg"
        android:layout_below="@+id/smg"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="200dp"
        android:background="@color/UNSC"
        android:text="Back" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewHumanWep2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize = "BANNER"
        ads:adUnitId="ca-app-pub-7075581824590120/4664229091"
        />

</RelativeLayout>
